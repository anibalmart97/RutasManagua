<div class="">
  <div class="row">
    <div class="col-md-9 col-xs-12">
      <%= form_for @article, html: { multipart: true } do |f| %>
        <% if @article.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

            <ul>
            <% @article.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>


        <div class="field col-xs-12">
          <%= f.label :'Titulo' %><br>
          <%= f.text_field :article_title,class:"form-control",id:"titulo" %>
        </div>
        <div class="field col-xs-12">
          <%= f.label :'Sub-Titulo' %><br>
          <%= f.text_field :article_subtitle,class:"form-control",id:"subtitulo" %>
        </div>
        <div class="field col-xs-12">
          <%= f.label :'Imagen del Articulo' %><br>
          <%= image_tag @article.image.url(:small),class:"thumbnail img-responsive"%>
          <%= f.file_field :image,id:"imagen",class:"" %>
        </div>

        <br>
        <br>
        
        <div class="field col-xs-12">
          <%= f.label :'Contenido' %><br>
          <%= f.cktext_area :article_content,class:"form-control box-info",id:"informacion" %>
        </div>
        <div class="field col-xs-12 col-md-6">
          <%= f.label :'Seccion/Categoria' %><br>
          <%= f.collection_select :section_id,Section.all, :id, :section_name, {}, {:class=>"form-control",:id=>"categoria"} %>
        </div>
        <div class="field col-xs-12 col-md-6">
            <%= f.label :'Fecha' %><br>
            <%= f.date_select :article_date,class:"form-control",id:"datetimepicker1" %>
        </div>
        <br/>
        <div class="actions pull-right" style="margin-top:20px;">
            <%= f.button 'Guardar',class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="col-xs-3 hidden-xs">

    </div>
  </div>
</div>

<script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker();
    });
</script>
